@using MenShopBlazor.Services.Branch;
@using MenShopBlazor.DTOs.Branch;
@using MenShopBlazor.Shared
@using MenShopBlazor.DTOs.AddressDTO;
@using MenShopBlazor.Services.Admin;
@using MenShopBlazor.DTOs.Product;
@inject IBranchService BranchService
@inject IAdminService AdminService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@attribute [Authorize(Roles = "Admin, RevenueManager, Factory, WarehouseManager")]
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Components.Authorization;

<MudDialog MaxWidth="MaxWidth.Small" MaxHeight="unset" Style="overflow-y:hidden;">
    <DialogContent>
        <MudText Typo="Typo.h6">Thêm chi nhánh mới</MudText>

        <MudTextField @bind-Value="branch.Name"
                      Label="Tên Chi nhánh"
                      Required="true"
                      Immediate="true"
                      For="@(() => branch.Name)"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined" />

        <AddressSelector Value="@branch.Address" ValueChanged="v => branch.Address = v" />
        <MudTextField @bind-Value="branch.Address.Street"
                      Label="Số nhà/Tên đường"
                      Required="true"
                      RequiredError="Vui lòng nhập Số nhà/Tên đường"
                      Margin="Margin.Dense"
                      Variant="Variant.Outlined" />

        <MudRadioGroup T="bool" @bind-Value="branch.IsOnline">
            <MudRadio Value="true" Label="Chi nhánh Online" />
            <MudRadio Value="false" Label="Chi nhánh Offline" />
        </MudRadioGroup>

    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="CreateBranchAsync">Thêm</MudButton>
        <MudButton OnClick="Cancel">Hủy</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private CreateUpdateBranchDTO branch = new()
    {
        Address = new AddressInfo()
    };



    private async Task CreateBranchAsync()
    {
        if (string.IsNullOrWhiteSpace(branch.Name))
        {
            Snackbar.Add("Tên chi nhánh không được để trống", Severity.Warning);
            return;
        }
        if (
            string.IsNullOrWhiteSpace(branch.Address.ProvinceName) ||
            string.IsNullOrWhiteSpace(branch.Address.DistrictName) ||
            string.IsNullOrWhiteSpace(branch.Address.WardName))
        {
            Snackbar.Add("Vui lòng điền đầy đủ thông tin địa chỉ!", Severity.Warning);
            return;
        }
        Console.WriteLine("Tên chi nhánh: " + branch.Name);
        branch.Address = branch.Address;
        var response = await BranchService.CreateBranchAsync(branch);
        if (response.IsSuccess)
        {
            Snackbar.Add($"{response.Message}", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            Snackbar.Add($"{response.Message}", Severity.Error);
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
