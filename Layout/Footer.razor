<MudPaper Elevation="0" Class="py-4 bg-white mt-5">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudGrid>

            <MudItem xs="6" sm="4" md="3">
                <MudText Typo="Typo.subtitle2" Class="mb-2 font-weight-bold">Mua sắm</MudText>
                <MudStack Spacing="1">
                    <MudLink Color="Color.Default">Khuyến mãi</MudLink>
                    <MudLink Color="Color.Default">Sản phẩm mới</MudLink>
                    <MudLink Color="Color.Default">Hướng dẫn mua hàng</MudLink>
                    <MudLink Color="Color.Default">Hướng dẫn chọn size</MudLink>
                </MudStack>
            </MudItem>

            <MudItem xs="6" sm="4" md="3">
                <MudText Typo="Typo.subtitle2" Class="mb-2 font-weight-bold">Hỗ trợ</MudText>
                <MudStack Spacing="1">
                    <MudLink Color="Color.Default">Chính sách khách hàng</MudLink>
                    <MudLink Color="Color.Default">Chính sách bảo hành</MudLink>
                    <MudLink Color="Color.Default">Chính sách vận chuyển</MudLink>
                    <MudLink Color="Color.Default">Chính sách đổi trả</MudLink>
                    <MudLink Color="Color.Default">Chính sách bảo mật</MudLink>
                </MudStack>
            </MudItem>

            <MudItem xs="12" sm="4" md="3">
                <MudText Typo="Typo.subtitle2" Class="mb-2 font-weight-bold">Thông tin</MudText>
                <MudStack  Spacing="1">
                    <MudLink Color="Color.Default">Giới thiệu</MudLink>
                    <MudLink Color="Color.Default">Liên hệ</MudLink>
                    <MudLink Color="Color.Default">Chính sách</MudLink>
                </MudStack>
            </MudItem>

            <MudItem xs="12" sm="12" md="3">
                <MudText Typo="Typo.subtitle2" Class="mb-2 font-weight-bold">Kết nối với MenShop</MudText>
                <MudStack Row=true Spacing="1">
                    <MudIconButton Size="Size.Medium" Color="Color.Primary" Icon="@Icons.Custom.Brands.Facebook" />
                    <MudIconButton  Size="Size.Medium" Color="Color.Secondary" Icon="@Icons.Custom.Brands.Instagram" />
                    <MudIconButton Size="Size.Medium" Color="Color.Tertiary" Icon="@Icons.Custom.Brands.Gmail"/>
                    <MudIconButton  Size="Size.Medium" Color="Color.Dark" Icon="@Icons.Custom.Brands.TikTok" />
                </MudStack>
            </MudItem>

            <MudItem xs="12" Class="mt-4 d-flex justify-content-center">
                <MudText Typo="Typo.caption" Align="Align.Center">
                    © 2025 MenShop. All rights reserved.
                </MudText>
            </MudItem>

        </MudGrid>
    </MudContainer>
</MudPaper>

